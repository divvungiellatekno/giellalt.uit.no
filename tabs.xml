<!-- The rules for tabs are:
       @dir will always have '/@indexfile' added.
       @indexfile gets appended to @dir if the tab is selected. Defaults to 'index.html'
       @href is not modified unless it is root-relative and obviously specifies a directory
        (ends in '/'), in which case /index.html will be added
       If @id's are present, site.xml entries with a matching @label will be in that tab.
       Tabs can be embedded to a depth of two. The second level of tabs will only be
        displayed when their parent tab is selected.
    -->
<!-- The id attribute in the tab tag has to match the tab attribute in site.xml -->
    <!-- The Tech-Doc tab -->
    <xi:include href="tabs-frag.xml#xpointer(/tabs/tab[@id='TechDoc'])" />

    <!-- The Proofing Tech-Doc tab -->
    <xi:include href="tabs-frag.xml#xpointer(/tabs/tab[@id='proof'])" />

    <!-- The Words Tech-Doc tab
    <xi:include href="wordsdoc/tabs-frag.xml" /> -->

    <!-- The TTS documentation tab -->
